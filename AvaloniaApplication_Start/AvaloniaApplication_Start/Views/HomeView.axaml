<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:viewmodels="using:AvaloniaApplication_Start.ViewModels"
			 xmlns:model="using:AvaloniaApplication_Start.Model"
			 xmlns:dts="using:AvaloniaApplication_Start.DataTemplates"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="AvaloniaApplication_Start.Views.HomeView">
	<UserControl.Styles>
		<Style Selector="TextBlock.h1">
			<Setter Property="Foreground" Value="yellow" />
			<Setter Property="FontSize" Value="30" />
		</Style>
	</UserControl.Styles>
	<UserControl.DataTemplates>
		<DataTemplate DataType="viewmodels:FooViewModel">
			<Border Background="red" CornerRadius="8">
				<TextBlock Text="{Binding FooName}" />
			</Border>
		</DataTemplate>

		<DataTemplate DataType="viewmodels:BarViewModel">
			<Border Background="blue" CornerRadius="8">
				<TextBlock Text="{Binding BarName}"/>
			</Border>
		</DataTemplate>

	</UserControl.DataTemplates>
	<UserControl.Resources>
		<!--Resources是如何使用的-->
	</UserControl.Resources>

	<Grid Background="DarkSalmon">
		<Grid.RowDefinitions>
			<!--RowDefinition默认用的是*而不是auto -->
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<!--两行-->
		<Grid RowDefinitions="* *">

		</Grid>
		<StackPanel Grid.Row="0" Grid.Column="0">
			<TextBlock Text="数据模版的简单使用" />
			<Label Content="Foo Datatemplate:" FontFamily="Microsoft YaHei" />
			<ContentControl Content="{Binding Foo}">
				<ContentControl.DataTemplates>
					<DataTemplate DataType="viewmodels:FooViewModel">
						<StackPanel Orientation="Horizontal">
							<Ellipse Fill="white" Width="50" Height="50" />
							<TextBlock Text="{Binding FooName}" Margin="10,0,0,0" VerticalAlignment="Center" />
						</StackPanel>
					</DataTemplate>
				</ContentControl.DataTemplates>
			</ContentControl>
			<Label Content="Bar Datatemplate：" />
			<ContentControl Content="{Binding Bar}" />
			<ItemsControl ItemsSource="{Binding FooCollection}" />
			<TextBlock Text="{Binding  MainName}" />
			<TextBlock Text="桌面开发的教程" />
			<Button Content="this is a" Command="{Binding SubmitCommand}" />
		</StackPanel>

		<StackPanel Grid.Row="0" Grid.Column="1"  Orientation="Horizontal"  Background="pink" HorizontalAlignment="Stretch">
			<Button Content="123456" Command="{Binding SubmitCommand}" />
			<TextBlock Classes="h1" Text="20"/>
		</StackPanel>

		<StackPanel Grid.Row="0" Grid.Column="2"  Orientation="Horizontal"  Background="green" HorizontalAlignment="Stretch">
			<TextBlock Text="Avalonia中的数据模版选择器的使用" />
		</StackPanel>

		<StackPanel Grid.Row="1" Grid.Column="0">
			<!--<ContentControl Content="{Binding SinglePerson}">
			<ContentControl.ContentTemplate>
			<dts:SampleIDataTemplate />
			</ContentControl.ContentTemplate>
			</ContentControl>-->

			<ContentControl Content="{Binding SinglePerson}">
				<ContentControl.DataTemplates>
					<!--DataTemplate既可以定义在axaml中也可以被定义在单独的类文件中，以下是类文件build中生成对应的模版(多个控件)-->
					<dts:SampleIDataTemplate />
				</ContentControl.DataTemplates>
			</ContentControl>
		</StackPanel>

		<!--
		<StackPanel Grid.Row="1" Grid.Column="0">
		<StackPanel.DataTemplates>
		<dts:SampleIDataTemplate />
		</StackPanel.DataTemplates>
		<ContentControl Content="{Binding SinglePerson}">
		</ContentControl>
		</StackPanel>-->
	</Grid>
</UserControl>
